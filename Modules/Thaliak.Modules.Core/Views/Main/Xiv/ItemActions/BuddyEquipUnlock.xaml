<UserControl x:Class="Thaliak.Modules.Core.Views.Main.Xiv.ItemActions.BuddyEquipUnlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" DataContext="{Binding BuddyEquip}">
        <TextBlock Text="{Binding Path=Name, StringFormat='{}Unlocks {0} for your companion.'}" TextWrapping="Wrap" />
        <Border Height="2" CornerRadius="1" HorizontalAlignment="Stretch" Background="{DynamicResource SeperatorBrush}" Margin="2" />
    </StackPanel>
</UserControl>
